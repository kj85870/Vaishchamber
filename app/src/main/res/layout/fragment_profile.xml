<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:background="@color/white"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@drawable/profiles"
       android:layout_marginTop="-20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="15dp">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="5dp"
            >
        <ImageView
            android:id="@+id/hotelImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/useres" />
    </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
          android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lato_bold"
            android:text="Username"
            android:textSize="18sp"

            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->

            <!--android:text="Business Status"-->
            <!--android:textSize="13dp"-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:layout_marginLeft="-110dp"/>-->
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/email_id"-->
            <!--android:textSize="13dp"-->
            <!--android:layout_marginTop="70dp"-->
            <!--android:layout_marginLeft="-86dp"/>-->


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/addposts"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            app:srcCompat="@drawable/add_posts"
                            app:backgroundTint="@color/title_text_color"
                            app:borderWidth="2dp"
                            app:elevation="3dp"
                            app:fabSize="normal"
                            app:maxImageSize="30dp"
                            app:rippleColor="@color/Indigo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="Add Posts"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/editprofile"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            app:srcCompat="@drawable/ic_edit_black_24dp"
                            app:backgroundTint="@color/title_text_color"
                            app:borderWidth="2dp"
                            app:elevation="3dp"
                            app:fabSize="normal"
                            app:maxImageSize="30dp"
                            app:rippleColor="@color/Indigo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="Edit Profile"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            app:srcCompat="@drawable/ic_favorite_black_24dp"
                            app:backgroundTint="@color/title_text_color"
                            app:borderWidth="2dp"
                            app:elevation="3dp"
                            app:fabSize="normal"
                            app:maxImageSize="30dp"
                            app:rippleColor="@color/Indigo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="My Interests"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            app:srcCompat="@drawable/ic_wc_black_24dp"
                            app:backgroundTint="@color/title_text_color"
                            app:borderWidth="2dp"
                            app:elevation="3dp"
                            app:fabSize="normal"
                            app:maxImageSize="30dp"
                            app:rippleColor="@color/Indigo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="Supporters"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:src="@drawable/settings"
                            app:backgroundTint="@color/title_text_color"
                            app:borderWidth="2dp"
                            app:elevation="3dp"
                            app:fabSize="normal"
                            app:maxImageSize="30dp"
                            app:rippleColor="@color/Indigo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="Settings"
                        android:textColor="@color/Black"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>


